<Application x:Class="FacultyWpfApp1ButtonStudentsStudents.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FacultyWpfApp1ButtonStudentsStudents"
             xmlns:vms="clr-namespace:FacultyWpfApp1ButtonStudents.ViewModels"
             StartupUri="/MainWindow.xaml">
    <Application.Resources>
        <vms:MainWindowViewModel x:Key="mainVM"/>
        <CollectionViewSource x:Key="students"
                              Source="{Binding Students, Source={StaticResource mainVM}}"/>
        <CollectionViewSource x:Key="subjects"
                              Source="{Binding Subjects, Source={StaticResource mainVM}}"/>
    </Application.Resources>
</Application>
